<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="19sp"
        android:layout_height="19sp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_marginRight="7sp"
        android:src="@drawable/info_button"
        android:onClick="onInfoClicked"/>
    <TextView
        android:id="@+id/information_name"
        android:layout_toRightOf="@id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="onInfoClicked"
        android:clickable="true"
        />
    <TextView
        android:layout_below="@id/information_name"
        android:id="@+id/information_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        />
</RelativeLayout><!-- From: file:/Users/fewstera/Documents/Dissertation/implementation/InjectableMedicinesGuide/app/src/main/res/layout/drug_information.xml -->