        </activity>
        <activity android:configChanges="orientation|keyboard|keyboardHidden|screenSize" android:label="@string/title_activity_download_data" android:name="com.fewstera.injectablemedicinesguide.DownloadDataActivity" android:parentActivityName="com.fewstera.injectablemedicinesguide.LoginActivity">
